<%- include('../includes/head') %>
<%- include('../includes/header') %>

<div class="container">
	<div class="row">
		<div class="col col-xl-9 order-xl-2 col-lg-9 order-lg-2 col-md-12 order-md-1 col-sm-12 col-12">
			<div class="ui-block">
				<div class="ui-block-title">
					<h6 class="title">Add Area</h6>
				</div>
				<div class="ui-block-content">
                    
                    
                        <div class="form-group label-floating">
                            <label class="control-label">Title</label>
                            <input class="form-control" id="title" type="text">
                        </div>
                    

                        <div class="form-group label-floating is-select">
                            <label class="control-label">Action Component</label>
                            <select id="action" class="form-select" required> 
                                <option value="" selected>Please select an option</option>
                                <% for (var i = 0; i < actions.length; i++) { %>
                                    <option value="<%= JSON.stringify({service: actions[i].service, name: actions[i].name, description: actions[i].description}) %>"><%= actions[i].service.toUpperCase() + ' - ' + actions[i].description %></option>
                                <% } %>
                            </select>
                        </div>

                        <div class="form-group label-floating is-select">
                            <label class="control-label">REAction Component</label>
                            <select id="reaction" class="form-select" required>
                                <option value="" selected>Please select an option</option>
                                <% for (var i = 0; i < reactions.length; i++) { %>
                                    <option value="<%= JSON.stringify({service: reactions[i].service, name: reactions[i].name, description: reactions[i].description}) %>"><%= reactions[i].service.toUpperCase() + ' - ' + reactions[i].description %></option>
                                <% } %>
                            </select>
                        </div>

                        <div class="col col-lg-6 col-md-6 col-sm-6 col-6">
                            <a onclick="addArea()" class="btn btn-primary btn-lg full-width">Add</a>
                        </div>

				</div>
			</div>
		</div>
        <%- include('../includes/account-left-nav') %>
	</div>
</div>

<%- include('../includes/footer') %>